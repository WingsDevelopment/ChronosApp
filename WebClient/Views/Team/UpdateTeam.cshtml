@model TeamViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update team: @Model.TeamName</h6>
    </div>
    <div class="card-body">
        <form class="w3-container" style="text-align:left" method="post"
              asp-controller="Team"
              asp-action="UpdateTeam"
              asp-route-id="@Model.Id">

            <label>Team name:</label>
            <div class="input-group">
                <div>
                    @Html.TextAreaFor(model => model.TeamName, 1, 30, new { @class = "form-control", required = "required" })
                </div>
            </div>

            <br />
            <div>
                <label>Project:</label>
                <select class="selectpicker" asp-for="ProjectId" name="ProjectId" 
                        asp-items="Model.Projects"
                        required
                        id="project-id">
                </select>
            </div>

            <br />
            <input class="btn btn-success" type="submit" name="Add" value="Save" />
        </form>
    </div>
</div>

<script>
    var selectValue1 = @Model.Projects.Where(x => x.Selected).FirstOrDefault().Value;

    $("#project-id").val(selectValue1);

    $('#project-id').selectpicker('refresh');
</script>