@model ExpenseTypeViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create new team</h6>
    </div>
    <div class="card-body">
        <form class="w3-container" style="text-align:left" method="post"
              asp-controller="ExpenseType"
              asp-action="UpdateExpenseType"
              asp-route-id="@Model.Id">

            <label>ExpenseType name:</label>
            <div class="input-group">
                <div>
                    @Html.TextAreaFor(model => model.ExpenseTypeName, 1, 30, new { @class = "form-control", required = "required" })
                </div>
            </div>

            <br />

            <label>ExpenseType discription:</label>
            <div class="input-group">
                <div>
                    @Html.TextAreaFor(model => model.Discription, 3, 100, new { @class = "form-control" })
                </div>
            </div>

            <br />
            <input class="btn btn-success" type="submit" name="Add" value="Save" />
        </form>
    </div>
</div>