@model ClientViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update client: @Model.ClientName</h6>
    </div>
    <div class="card-body">
        <form class="w3-container" style="text-align:left" method="post"
              asp-controller="Client"
              asp-action="UpdateClient"
              asp-route-id="@Model.Id">

            <label>Client name:</label>
            <div class="input-group">
                <div>
                    @Html.TextAreaFor(model => model.ClientName, 1, 30, new { @class = "form-control", required = "required" })
                </div>
            </div>

            <br />
            <input class="btn btn-success" type="submit" name="Add" value="Save" />
        </form>
    </div>
</div>